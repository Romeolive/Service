<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/MediumSpringGreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прослушивание музыки!!!"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBaseline_toTopOf="parent"
        android:id="@+id/head"
        android:textColor="@color/DarkMagenta"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запустить сервис"
        android:id="@+id/start_btn"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Остановить сервис"
        android:id="@+id/stop_btn"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintLeft_toRightOf="@+id/start_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>